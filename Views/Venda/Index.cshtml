@model IEnumerable<webtest.Objects.Venda>

@*@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_ViewImports.cshtml";
}*@

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumVendaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumVendaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumVendaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
